#==============================================================================
# Flatnet Gateway - TLS Configuration Example
# Phase 4, Stage 3: Security
#
# This is an example TLS configuration for OpenResty on Windows.
# Copy this file to ssl.conf and customize for your environment.
#
# Prerequisites:
#   1. Generate certificates using scripts/security/generate-cert.sh
#   2. Place certificates in F:/flatnet/config/ssl/
#   3. Include this file from nginx.conf
#==============================================================================

#------------------------------------------------------------------------------
# HTTPS Server - Main Application
#------------------------------------------------------------------------------

server {
    listen 443 ssl http2;
    server_name flatnet.local;

    #--------------------------------------------------------------------------
    # TLS Certificate Configuration
    # Note: Use forward slashes for Windows paths
    #--------------------------------------------------------------------------

    ssl_certificate F:/flatnet/config/ssl/server.crt;
    ssl_certificate_key F:/flatnet/config/ssl/server.key;

    # If using CA-signed certificate, include the chain:
    # ssl_trusted_certificate F:/flatnet/config/ssl/chain.pem;

    #--------------------------------------------------------------------------
    # TLS Protocol Configuration
    # Modern configuration - TLS 1.2 and 1.3 only
    #--------------------------------------------------------------------------

    ssl_protocols TLSv1.2 TLSv1.3;

    # Strong cipher suites (Mozilla Modern configuration)
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;

    # Let the client choose the cipher (recommended for TLS 1.3)
    ssl_prefer_server_ciphers off;

    # DH parameters for DHE ciphers (optional, generate with: openssl dhparam -out dhparam.pem 2048)
    # ssl_dhparam F:/flatnet/config/ssl/dhparam.pem;

    #--------------------------------------------------------------------------
    # TLS Session Configuration
    # Improves performance for repeat connections
    #--------------------------------------------------------------------------

    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;

    # Disable session tickets for better forward secrecy
    ssl_session_tickets off;

    #--------------------------------------------------------------------------
    # OCSP Stapling (for CA-signed certificates only)
    # Note: Not applicable for self-signed certificates
    #--------------------------------------------------------------------------

    # ssl_stapling on;
    # ssl_stapling_verify on;
    # ssl_trusted_certificate F:/flatnet/config/ssl/chain.pem;
    # resolver 8.8.8.8 8.8.4.4 valid=300s;
    # resolver_timeout 5s;

    #--------------------------------------------------------------------------
    # Security Headers
    #--------------------------------------------------------------------------

    # HTTP Strict Transport Security
    # Start with short max-age during testing, increase for production
    add_header Strict-Transport-Security "max-age=63072000" always;

    # Include common security headers
    include conf.d/security-headers.conf;

    #--------------------------------------------------------------------------
    # Logging
    #--------------------------------------------------------------------------

    access_log logs/ssl_access.log combined;
    error_log logs/ssl_error.log warn;

    #--------------------------------------------------------------------------
    # Proxy to Backend (Forgejo example)
    #--------------------------------------------------------------------------

    location / {
        proxy_pass http://127.0.0.1:3000;
        include conf.d/proxy-params.conf;

        # For WebSocket connections
        include conf.d/websocket-params.conf;
    }

    # Static files (if any)
    location /static/ {
        alias F:/flatnet/static/;
        expires 7d;
        add_header Cache-Control "public, immutable";
    }

    #--------------------------------------------------------------------------
    # Error Pages
    #--------------------------------------------------------------------------

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root F:/flatnet/openresty/html;
        internal;
    }
}

#------------------------------------------------------------------------------
# HTTP to HTTPS Redirect
# Automatically redirects all HTTP traffic to HTTPS
#------------------------------------------------------------------------------

server {
    listen 80;
    server_name flatnet.local;

    # Redirect all HTTP requests to HTTPS
    return 301 https://$server_name$request_uri;
}

